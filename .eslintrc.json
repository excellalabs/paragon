{
  "extends": ["eslint-config-airbnb", "eslint-config-edx"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "react/no-array-index-key": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx"]
      }
    }
  },
  "env": {
    "jest": true
  },
  "overrides": {
    "files": ["*.stories.jsx", "*.test.jsx"],
    "rules": {
      "import/no-extraneous-dependencies": "off" // storybook & enzyme should stay devDependencies
    }
  }
}
